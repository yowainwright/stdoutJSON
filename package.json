{
  "name": "stdoutjson",
  "version": "0.0.6",
  "description": "transforms stdout to JSON ðŸ•¸",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && pnpm transpile",
    "commit-msg": "npx --no -- commitlint --edit $1",
    "lint": "eslint src/*.ts",
    "pre-commit": "lint-staged && pnpm typecheck",
    "prepare": "npx husky add .husky/pre-commit 'npm run pre-commit' && npx husky add .husky/commit-msg 'npm run commit-msg'",
    "prepublishOnly": "pnpm i && pnpm test && pnpm build",
    "release": "release-it",
    "test": "jest",
    "transpile": "tsc",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/stdoutJSON.git"
  },
  "keywords": [
    "stdout",
    "cli",
    "testing",
    "json",
    "stdoutJSON",
    "cli"
  ],
  "author": "Jeff Wainwright <https://jeffry.in> (yowainwright@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yowainwright/stdoutJSON/issues"
  },
  "homepage": "https://github.com/yowainwright/stdoutJSON#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "release-it": "^14.12.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "dist"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pnpm typecheck"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "jest"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v%s"
    }
  }
}
